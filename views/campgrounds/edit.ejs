<% layout('layout/boilerplate') %>
<h1>Edit CampGround</h1>
<form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="campground[title]"
      value="<%= campground.title %>"
      placeholder="Camp Ground Title"
    />
  </div>
  <div>
    <label for="location">Location</label>
    <input
      type="text"
      id="location"
      name="campground[location]"
      value="<%= campground.location %>"
      placeholder="Camp Ground Location"
    />
  </div>
  <button>Update Ground</button>
</form>
<a href="/campgrounds/<%= campground.id %>">Back to Campground</a>
