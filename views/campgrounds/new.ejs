<% layout('layout/boilerplate') %> <% layout('layout/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          placeholder="Camp Ground Title"
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          placeholder="Camp Ground Location"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          placeholder="Camp Ground Image"
        />
      </div>
      <div class="mb-3">
        <label for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            name="campground[price]"
            id="price"
            placeholder="0.00"
            type="text"
            class="form-control"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          placeholder="Camp Ground Description"
        ></textarea>
      </div>
      <button class="btn btn-success mb-3">Add Camp Ground</button>
    </form>
    <a href="/campgrounds" class="btn btn-primary">All Camps</a>
  </div>
</div>
