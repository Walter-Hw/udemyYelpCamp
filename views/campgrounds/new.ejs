<% layout('layout/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          required
          autocomplete="off"
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          placeholder="Camp Ground Title"
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          required
          autocomplete="off"
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          placeholder="Camp Ground Location"
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <label for="" class="form-label">Want Some Images?</label>
      <div class="input-group mb-3">
        <label class="input-group-text" for="image">Upload</label>
        <input
          name="image"
          type="file"
          class="form-control"
          id="image"
          multiple
        />
      </div>
      <!-- <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          required
          autocomplete="off"
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          placeholder="Camp Ground Image"
        />
        <div class="valid-feedback">Looks Good!</div>
      </div> -->
      <div class="mb-3">
        <label for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            required
            name="campground[price]"
            id="price"
            placeholder="0.00"
            type="text"
            class="form-control"
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          required
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          placeholder="Camp Ground Description"
        ></textarea>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <button class="btn btn-success mb-3">Add Camp Ground</button>
    </form>
    <a href="/campgrounds" class="btn btn-primary">All Camps</a>
  </div>
</div>
